@model TodoList.Models.TodoModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row text-center">
    <div class="col-md-6 mx-auto shadow-sm p-3 mb-5 bg-white rounded">
        <div class="card">
            <div class="card-header">
                <h1 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Todo</h1>
            </div>
            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.todoName)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.todoName)
                    </dd>
                </div>
                <div class="row">
                    <dt class="col-md-6">
                        @Html.DisplayNameFor(model => model.Priority)
                    </dt>
                    <dd class="col-md-6">
                        @Html.DisplayFor(model => model.Priority)
                    </dd>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-around">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger mr-3" />
                    <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>